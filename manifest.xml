<Manifest>
  <Version>1.0.0</Version>
  <Id>your-unique-id-here</Id>
  <ProviderName>Your Company Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Auto Reply Add-in"/>
  <Description DefaultValue="Automatically suggests standard reply templates for automatic replies in Outlook."/>
  <IconUrl DefaultValue="https://yourdomain.com/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://yourdomain.com/icon@2x.png"/>
  <SupportUrl DefaultValue="https://yourdomain.com/support"/>
  <WebApplicationInfo>
    <Id>Your-Application-Id</Id>
    <Resource>https://yourdomain.com</Resource>
  </WebApplicationInfo>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://yourdomain.com/src/taskpane.html"/>
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
      <WebSettings>
        <SourceLocation DefaultValue="https://yourdomain.com/src/taskpane.html"/>
        <RequestedHeight>400</RequestedHeight>
      </WebSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
</Manifest>