<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
  <Id>e4c2b1b2-1234-4bcd-9a12-123456789abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Öztiryakiler</ProviderName>
  <DefaultLocale>tr-TR</DefaultLocale>
  <DisplayName>Otomatik Yanıt Şablonu</DisplayName>
  <Description>Otomatik yanıtlar için standart şablon önerisi sunar.</Description>
  <IconUrl DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin/src/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin/src/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin/"/>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin/src/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
      <WebSettings>
        <SourceLocation DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin/src/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </WebSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
</OfficeApp>